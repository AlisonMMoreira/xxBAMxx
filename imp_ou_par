# Programa em Assembly MIPS para verificar se um número é ímpar ou par

.data
prompt: .asciiz "Digite um número: "
result_par: .asciiz "O número é par."
result_impar: .asciiz "O número é ímpar."

.text
.globl main

main:
    # Exibir o prompt para digitar o número
    li $v0, 4
    la $a0, prompt
    syscall

    # Ler o número digitado pelo usuário
    li $v0, 5
    syscall
    move $t0, $v0 # Salvar o número em $t0

    # Verificar se o número é ímpar ou par
    andi $t1, $t0, 1  # Fazer uma operação AND com 1 para verificar o último bit
    beqz $t1, par     # Se o último bit for 0, o número é par
    j impar           # Caso contrário, o número é ímpar

par:
    # Exibir mensagem informando que o número é par
    li $v0, 4
    la $a0, result_par
    syscall
    j exit

impar:
    # Exibir mensagem informando que o número é ímpar
    li $v0, 4
    la $a0, result_impar
    syscall
    j exit

exit:
    # Encerrar o programa
    li $v0, 10
    syscall
